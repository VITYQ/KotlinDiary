<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:id="@+id/addhometaskfragment"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
<!--    tools:context="com.example.kotlindiary.AddLessonActivity">-->


    <EditText
        android:id="@+id/editText_Hometask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_AddHomeTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/editText_Hometask"
        app:layout_constraintStart_toStartOf="@+id/editText_Hometask"
        app:layout_constraintTop_toBottomOf="@+id/editText_Hometask" />
</androidx.constraintlayout.widget.ConstraintLayout>
